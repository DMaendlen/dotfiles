# ~/.mutt/muttrc

# directories and commands
set alias_file          = ~/.mutt/aliases                       # alias file
set certificate_file    = ~/.mutt/certificates                  # where to store certs
set header_cache        = ~/.mutt/cache/headers                 # where to store headers
set message_cachedir    = ~/.mutt/cache/bodies                  # where to store bodies
set signature           = ~/.mutt/sig                           # my signature file
set tmpdir              = ~/.mutt/temp                          # where to keep temp files
set editor              = "vim -c 'set tw=80 et' +/^$"          # use vim and skip to first blank line
set print_command       = "enscript -p - | psselect -r | lp"    # print email in reverse page order

# maildir settings
set mbox_type           = Maildir                               # mailbox type
set folder              = ~/mail                                # mailbox location
set spoolfile           = "+Bifrost/INBOX"                        # Bifrost is default inbox

# main options
set beep_new                                                    # terminal bell on new message
unset confirmappend                                             # don't ask, just do
set delete                                                      # don't ask, just do
set mail_check=3                                     # minimum time between scans
set mail_check_recent = no
unset markers                                                   # no ugly plus signs
unset mark_old                                                  # read/new is good enough for me
set menu_scroll                                                 # scroll in menus
set pager_index_lines   = 10                                    # number of index lines to show
set pager_context       = 5                                     # number of context lines to show
set pager_stop                                                  # don't go to next message automatically
set pipe_decode                                                 # strip headers and eval mimes when piping
set reverse_alias                                               # show names from alias file in index
set sort                = threads                               # like gmail
#set sort_aux           = reverse-last-date-received            # like gmail
unset sort_re                                                   # always thread
set thorough_search                                             # strip headers and eval mimes before searching
set thread_received                                             # sort threads by date received, not sent
set tilde                                                       # show tildes like in vim
set timeout             = 1                                     # idle time before scanning
unset wait_key                                                  # don't show "Press any key to continue"
set quit
#sidebar
set sidebar_visible=no

# enriched messages
auto_view text/html                                             # view html automatically
alternative_order text/plain text/enriched text/html            # but save it for last

# formats and regexps
set alias_format        = "%4n %t %-20a %r"
set date_format         = "%Y-%m-%d at %I:%m"
set forward_format      = "Fwd: %s"                             # format for subject when forwarding
set index_format        = "%3C %Z %[!%m/%d] %-17.17F %s"
set folder_format	= "%2C %t %N  %-8.8u %-8.8g %8s %d %f"
set quote_regexp        = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set reply_regexp        = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set status_format       = "-%r- %v ───────────/ %f %m%?n? [+%n]?%?d? [-%d]?%?t? [*%t]? /%?p?───/ %p waiting to send /?─%>─(%P)───"

# composing mail
set askcc                                                       # always ask for CC:
set edit_headers                                                # show headers when composing
set fast_reply                                                  # skip to compose when replying
set forward_quote                                               # include message in forwards
set include                                                     # include message in replies
set realname            = "David Mändlen"                       # who am i?
set reply_to                                                    # reply to Reply-to: field, not From:
set reverse_name                                                # reply as who it was sent to (see alternates)
	set envelope_from
	set sig_dashes
	set sendmail_wait       = -1
	set fcc_attach
#set mime_forward	= yes
#set mime_forward_rest	= yes
	set attribution     = "%n wrote on %d:"                        # set the attribution
	set mailcap_path = ~/.mutt/mailcap

	set send_charset="utf-8"

# headers to show
	ignore *                                                          # ignore all headers
	unignore from: to: cc: date: subject:                             # show only these
	hdr_order from: to: cc: date: subject:                            # and in this order

# lists
#subscribe niveausenke@lists.shackspace.de mitglieder@lists.shackspace.de public@lists.shackspace.de ixs_public_cccs.de@bawue.de lugs.lug-s.org key@lists.shackspace.de mcf@lists.shackspace.de tinc@tinc-vpn.org wlanware@freifunk.net berlin@berlin.freifunk.net freecycle-stuttgart@yahoogroups.de eh2014-orga@lists.shackspace.de offlineimap-project@lists.alioth.debian.org full-disclosure@lists.grok.org.uk

# list of folders to notify of new mail
#mailboxes +Gmail/INBOX

	source $alias_file                                                # required for functionality
	source ~/.mutt/colors
	source ~/.mutt/.gnupg.mutt
	source ~/.mutt/mailboxes

# override with account specific folder-hooks
#folder-hook Gmail/*      source ~/.mutt/gmail
			  folder-hook hse/* 	source ~/.mutt/hse
			  folder-hook Bifrost/INBOX.* 	source ~/.mutt/bifroest
			  folder-hook Bifrost/INBOX.shack/* source ~/.mutt/bifroest_shack
			  folder-hook Bifrost/INBOX.shack.mitglieder source ~/.mutt/bifroest_shackm
			  folder-hook Bifrost/INBOX.abuse source ~/.mutt/bifroest_abuse
			  folder-hook Bifrost/INBOX.thw source ~/.mutt/bifroest_thw

# collapse all thread in ML folders
#folder-hook Gmail/(arch_lists|xmonad_list|web_devel|yesod) "exec collapse-all"

# these just give me headaches
bind index,pager \# noop
bind index,pager \& noop
bind index i        noop

# bindings -- very vim-like
bind pager i       exit
bind pager q       toggle-quoted
bind pager /       search
bind pager k       previous-line
bind pager j       next-line
bind pager gg      top
bind pager G       bottom
bind index gg      first-entry
bind index G       last-entry
bind pager K       previous-undeleted
bind pager J       next-undeleted
bind index K       previous-unread
bind index J       next-unread
bind index,pager v next-unread-mailbox
bind index,pager V view-attachments
bind index ^N next-page
bind index,pager R group-reply

# macros
macro index ,i "<change-folder>!<return>" "go to inbox"
macro index ,h "<change-folder>=hse/INBOX<return>" "go to inbox"
macro index ,g "<change-folder>=Gmail/INBOX<return>" "go to inbox"
macro index ,s "<change-folder>=system<return>" "go to inbox"
macro index ,S "<change-folder>=Bifrost/INBOX/shack.mitglieder<return>" "go to shack"
macro index ,p "<pipe-message>cat > ~/" "save message as"
macro index ,z "<shell-escape>offlineimap -q -o<return>" "sync IMAP"
macro index ,r "<tag-pattern>all<return><tag-prefix><clear-flag>N<untag-pattern>all<return>" "mark all as read"
macro index ,R "<collapse-all><tag-pattern>all<return><tag-prefix><clear-flag>N<untag-pattern>all<return><collapse-all>" "mark all as read (collapsed)"
macro index ,v "<collapse-thread>" "collapse/uncollapse thread"
macro index ,V "<collapse-all>"    "collapse/uncollapse all threads"
macro index,pager n '?'\                "Switch to next mailbox
#search via mairix
#macro generic ,s "<enter-command>set my_cmd = \`$HOME/.mutt/msearch\`<return><enter-command>push \$my_cmd<return>" "search messages"
macro index,pager \cb |urlscan\n

